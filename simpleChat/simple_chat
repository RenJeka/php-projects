<?php

$db = new PDO('mysql:host=localhost;dbname=php1simple', 'root', '');
$db->exec('SET NAMES UTF8');

$sql =  "INSERT messages(namt, text, status) VALUES (:name, :text, :status)";

$query = $db->prepare($sql);

$params = [
    'name' =>'Admin',
    'text' => 'Delete all!!!',
    'status' => 1
];

$query->execute($params);

$errInfo = $query->errorInfo();
echo "<pre>";
print_r(var_dump($errInfo));
echo "</pre>";
echo "<br/>";
var_dump($errInfo);

